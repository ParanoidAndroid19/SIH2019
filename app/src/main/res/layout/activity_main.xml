                        android:weightSum="2">

                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:layout_width="0dp"
                            app:cardCornerRadius="15dp"
                            android:layout_height="wrap_content">

